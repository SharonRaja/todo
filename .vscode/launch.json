
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true,
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "justMyCode": false
        }
    ]
}
